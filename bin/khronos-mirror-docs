set -e

: ${XDG_CONFIG_HOME:=$HOME/.config}

prog_name="${0##*/}"
config_dir="$XDG_CONFIG_HOME/khronos-docs"
config_file="$config_dir/conf"

# Set defaults for config vars.
DOCDIR="$HOME/doc/khronos"
PREHOOK=
POSTHOOK=

function print_help() {
    echo "NAME"
    echo "    $prog_name - mirror documentation on Khronos websites"
    echo ""
    echo "SYNOPSIS"
    echo "    $prog_name [-h|--help] <all|egl|opengl|opengles>"
}

function fatal_error() {
    echo "error: $prog_name: $@"
    exit 1
}

function usage_error() {
    echo "usage error: $prog_name"
    echo
    print_help
    exit 1
}

function init_config() {
    mkdir -p "$config_dir"
    cat >"$config_file" <<EOF
#DOCDIR="\$HOME/doc/khronos"
#PREHOOK=
#POSTHOOK=
EOF
}

function load_config() {
    if [[ -r "$config_file" ]]; then
        source "$config_file"
    elif ! [[ -e "$config_file" ]]; then
        init_config
    fi
}

function run_prehook() {
    if [[ "$PREHOOK" ]]; then
        cd "$config_dir"
        ("$PREHOOK" "$@")
    fi
}

function run_posthook() {
    if [[ "$POSTHOOK" ]]; then
        cd "$config_dir"
        ("$POSTHOOK" "$@")
    fi
}

function mirror_egl() {
    local prefix="$DOCDIR/egl"

    run_prehook egl

    # Exclude the manpages in /registry/egl/sdk.
    wget \
        --mirror \
        --no-parent \
        --directory-prefix="$prefix/registry" \
        --no-host-directories \
        --cut-dirs=2 \
        -X /registry/egl/sdk \
        http://www.khronos.org/registry/egl/

    wget \
        --mirror \
        --no-parent \
        --directory-prefix="$prefix/quick-reference" \
        --no-host-directories \
        --cut-dirs=1 \
        http://www.khronos.org/files/egl-1-4-quick-reference-card.pdf

    run_posthook egl
}

function mirror_opengl() {
    local prefix="$DOCDIR/opengl"
    local url=

    run_prehook opengl

    wget \
        --mirror \
        --no-parent \
        --directory-prefix="$prefix" \
        --no-host-directories \
        -I registry/ \
        http://www.opengl.org/registry/

    local quick_reference_urls=(
        http://www.khronos.org/files/opengl-quick-reference-card.pdf # opengl32
        http://www.opengl.org/sdk/docs/reference_card/opengl40-quick-reference-card.pdf
        http://www.opengl.org/sdk/docs/reference_card/opengl41-quick-reference-card.pdf
        http://www.opengl.org/sdk/docs/reference_card/opengl42-quick-reference-card.pdf
        http://www.opengl.org/sdk/docs/reference_card/opengl42-core-quick-reference-card.pdf
        http://www.opengl.org/sdk/docs/reference_card/opengl43-quick-reference-card.pdf
        http://www.opengl.org/sdk/docs/reference_card/opengl44-quick-reference-card.pdf
    )

    for url in ${quick_reference_urls[@]}; do
        wget \
            --mirror \
            --no-parent \
            --directory-prefix="$prefix/quick-reference" \
            --no-host-directories \
            --no-directories \
            "$url"
    done

    ln -f "$prefix/quick-reference/opengl-quick-reference.pdf" \
          "$prefix/quick-reference/opengl32-quick-reference.pdf"

    run_posthook opengl
}

function mirror_opengles() {
    local prefix="$DOCDIR/opengles"

    run_prehook opengles

    wget \
        --mirror \
        --no-parent \
        --directory-prefix="$prefix/registry" \
        --no-host-directories \
        --cut-dirs=2 \
        -I /registry/gles/ \
        http://www.khronos.org/registry/gles/

    wget \
        --mirror \
        --no-parent \
        --directory-prefix="$prefix/quick-reference" \
        --no-host-directories \
        --cut-dirs=4 \
        http://www.khronos.org/opengles/sdk/docs/reference_cards/OpenGL-ES-2_0-Reference-card.pdf

    wget \
        --mirror \
        --no-parent \
        --directory-prefix="$prefix/quick-reference" \
        --no-host-directories \
        --cut-dirs=1 \
        http://www.khronos.org/files/opengles3-quick-reference-card.pdf

    run_posthook opengles
}

function mirror_webgl() {
    local prefix="$DOCDIR/webgl"

    run_prehook webgl

    wget \
        --mirror \
        --no-parent \
        --directory-prefix="$prefix/quick-reference" \
        --no-host-directories \
        --cut-dirs=2 \
        http://www.khronos.org/files/webgl/webgl-reference-card-1_0.pdf

    run_posthook webgl
}

function main() {
    local x
    local api

    if [[ $# -eq 0 ]]; then
        usage_error
    fi

    if [[ "$1" = "-h" ]] || [[ "$1" = "--help" ]]; then
        print_help
        exit
    fi

    for x in "$@"; do
        case "$x" in
            "all"|"egl"|"opengl"|"opengles"|"webgl")
                ;;
            *)
                usage_error
                ;;
        esac
    done

    load_config

    for api in "$@"; do
        case "$1" in
            "egl")
                mirror_egl
                ;;
            "opengl")
                mirror_opengl
                ;;
            "opengles")
                mirror_opengles
                ;;
            "webgl")
                mirror_webgl
                ;;
            "all")
                mirror_egl
                mirror_opengl
                mirror_opengles
                ;;
            *)
                usage_error
                ;;
        esac
    done
}

main "$@"
