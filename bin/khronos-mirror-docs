set -eu
set -o pipefail

: ${XDG_CONFIG_HOME:=$HOME/.config}

prog_name="${0##*/}"
config_dir="$XDG_CONFIG_HOME/khronos-docs"
config_file="$config_dir/config"

default_DOCDIR='"$HOME/doc/khronos"'
default_PREHOOK=
default_POSTHOOK=

function print_help() {
    echo "NAME"
    echo "    $prog_name - mirror documentation on Khronos websites"
    echo ""
    echo "SYNOPSIS"
    echo "    $prog_name [-h|--help] <all|egl|opengl|opengles>"
}

function fatal_error() {
    echo "error: $prog_name: $@"
    exit 1
} >&2

function usage_error() {
    echo "usage error: $prog_name"
    echo
    print_help

    exit 129 # same as git
} >&2

function init_config() {
    mkdir -p "$config_dir"
    cat >"$config_file" <<EOF
DOCDIR=$default_DOCDIR
PREHOOK=$default_PREHOOK
POSTHOOK=$default_POSTHOOK
EOF
}

function load_config() {
    if ! [[ -e "$config_file" ]]; then
        init_config
    fi

    source "$config_file"
}

function run_prehook() {
    if [[ "$PREHOOK" ]]; then
        cd "$config_dir"
        ("$PREHOOK" "$@")
    fi
}

function run_posthook() {
    if [[ "$POSTHOOK" ]]; then
        cd "$config_dir"
        ("$POSTHOOK" "$@")
    fi
}

function do_wget() {
    wget \
        --limit-rate=20K \
        --timestamping \
        --mirror \
        --no-parent \
        --no-host-directories \
        "$@"
}

function mirror_egl() {
    local prefix="$DOCDIR/egl"
    local quickref_urls

    run_prehook egl

    # Exclude the manpages in /registry/egl/sdk.
    do_wget \
        --directory-prefix="$prefix/registry" \
        --cut-dirs=2 \
        -X /registry/egl/sdk \
        http://www.khronos.org/registry/egl/

    quickref_urls=$(
        curl https://www.khronos.org/developers/reference-cards |
        sed -n -e 's/^.*value="\/\(files\/egl.*reference.*\.pdf\)".*$/https:\/\/www.khronos.org\/\1/p'
    )

    do_wget \
        --directory-prefix="$prefix/quick-reference" \
        --cut-dirs=1 \
        $quickref_urls

    run_posthook egl
}

function mirror_opengl() {
    local prefix="$DOCDIR/opengl"
    local quickref_urls

    run_prehook opengl

    do_wget \
        --directory-prefix="$prefix" \
        -I registry/ \
        http://www.opengl.org/registry/

    quickref_urls=$(
        curl https://www.khronos.org/developers/reference-cards |
        sed -n -e 's/^.*value="\/\(files\/opengl.*reference.*\.pdf\)".*$/https:\/\/www.khronos.org\/\1/p'
    )

    do_wget \
        --directory-prefix="$prefix/quick-reference" \
        --cut-dirs=1 \
        $quickref_urls

    ln -f "$prefix/quick-reference/opengl-quick-reference.pdf" \
          "$prefix/quick-reference/opengl32-quick-reference.pdf"

    run_posthook opengl
}

function mirror_opengles() {
    local prefix="$DOCDIR/opengles"
    local quickref_urls

    run_prehook opengles

    do_wget \
        --directory-prefix="$prefix/registry" \
        --cut-dirs=2 \
        -I /registry/gles/ \
        http://www.khronos.org/registry/gles/

    quickref_urls=$(
        curl https://www.khronos.org/developers/reference-cards |
        sed -n -e 's/^.*value="\/\(files\/opengles.*reference.*\.pdf\)".*$/https:\/\/www.khronos.org\/\1/p'
    )

    do_wget \
        --directory-prefix="$prefix/quick-reference" \
        --cut-dirs=1 \
        $quickref_urls

    run_posthook opengles
}

function mirror_webgl() {
    local prefix="$DOCDIR/webgl"
    local quickref_urls

    run_prehook webgl

    quickref_urls=$(
        curl https://www.khronos.org/developers/reference-cards |
        sed -n -e 's/^.*value="\/\(files\/webgl.*reference.*\.pdf\)".*$/https:\/\/www.khronos.org\/\1/p'
    )

    do_wget \
        --directory-prefix="$prefix/quick-reference" \
        --cut-dirs=1 \
        $quickref_urls

    run_posthook webgl
}

function main() {
    local x
    local api

    if [[ $# -eq 0 ]]; then
        usage_error
    fi

    if [[ "$1" = "-h" ]] || [[ "$1" = "--help" ]]; then
        print_help
        exit
    fi

    for x in "$@"; do
        case "$x" in
            "all"|"egl"|"opengl"|"opengles"|"webgl")
                ;;
            *)
                usage_error
                ;;
        esac
    done

    load_config

    for api in "$@"; do
        case "$1" in
            "egl")
                mirror_egl
                ;;
            "opengl")
                mirror_opengl
                ;;
            "opengles")
                mirror_opengles
                ;;
            "webgl")
                mirror_webgl
                ;;
            "all")
                mirror_egl
                mirror_opengl
                mirror_opengles
                mirror_webgl
                ;;
            *)
                usage_error
                ;;
        esac
    done
}

main "$@"
